generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model companies {
  id          BigInt    @id @default(autoincrement())
  name        String    @unique(map: "uq_companies_name")
  country     String?
  website_url String?
  created_at  DateTime? @default(now()) @db.Timestamptz(6)
}

model exhibitors_prw_2025 {
  id             BigInt    @id @default(autoincrement())
  event          String    @default("NRF Europe 2025")
  name           String
  country        String?
  address        String?
  phone          String?
  booth          String?
  highlights     String?
  company_info   String?
  activities     String?
  target_markets String?
  star_products  String?
  press_release  String?
  payload        Json?
  source_url     String?
  crawled_at     DateTime? @default(now()) @db.Timestamptz(6)
  email          String?
  website_url    String?
  linkedin_url   String?

  @@unique([event, name])
}

model admin_user {
  id            String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email         String    @unique @db.Citext
  password_hash String
  created_at    DateTime? @default(now()) @db.Timestamptz(6)
  last_login    DateTime? @db.Timestamptz(6)
}
